{
	"private": true,
	"scripts": {
		"clean": "del-cli _site",
		"local": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js --env.mixfile=build/webpack.mix",
		"production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js --env.mixfile=build/webpack.mix",
		"dev": "npm-run-all clean dev:*",
		"dev:webpack": "yarn run local",
		"dev:11ty": "eleventy",
		"watch": "npm-run-all clean --parallel watch:*",
		"watch:webpack": "yarn run local --watch",
		"watch:11ty": "eleventy --watch",
		"prod": "npm-run-all clean prod:*",
		"prod:webpack": "yarn run production",
		"build:11ty": "eleventy"
	},
	"devDependencies": {
		"@11ty/eleventy": "^0.11.0",
		"@braid/vue-formulate": "^2.4.3",
		"@fullhuman/postcss-purgecss": "^1.2.0",
		"browser-sync": "^2.24.6",
		"browser-sync-webpack-plugin": "^2.0.1",
		"cross-env": "^7.0",
		"del-cli": "^3.0.1",
		"eslint": "^5.16.0",
		"eslint-config-airbnb-base": "^13.1.0",
		"eslint-loader": "^2.1.2",
		"eslint-plugin-import": "^2.17.2",
		"eslint-plugin-vue": "^5.2.2",
		"laravel-mix": "^5.0.1",
		"lodash": "^4.17.13",
		"npm-run-all": "^4.1.5",
		"postcss-units": "^1.2.1",
		"resolve-url-loader": "^3.1.0",
		"sass": "^1.15.2",
		"sass-loader": "^8.0.0",
		"tailwindcss": "~1.8",
		"vue": "^2.6.11",
		"vue-template-compiler": "^2.6.11",
		"what-input": "^5.1.1"
	}
}
