{
	"paths": {
		"src": "resources/assets",
		"dest": "_site/compiled"
	},
	"config": {
		"browserSync": {
			"files": [
				"_site/compiled/css",
				"_site/compiled/js",
				"_site/*.html",
				"!**/*.map"
			],
			"ghostMode": false,
			"notify": false,
			"open": false,
			"port": 5757,
			"proxy": "baseplate-11ty.dev.com:80",
			"snippetOptions": {
				"rule": {
					"match": "</body>"
				}
			},
			"ui": false,
			"sync": false
		},
		"css": {
			"autoprefixer": {
				"cascade": false
			},
			"cleanCss": {},
			"purgeCssWhitelist": [],
			"purgeCssWhitelistPatterns": []
		},
		"js": {
			"lint": true
		}
	}
}
